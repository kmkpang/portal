<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="0.0.1"
        client="site"
        method="upgrade">
    <name>mod_webportal_search</name>
    <author>Softverk</author>
    <creationDate>June 16, 2011</creationDate>
    <copyright>Copyright (C) 2011 Softverk. All rights reserved.</copyright>
    <license>GNU/GPL</license>
    <authorEmail>admin@softverk.is</authorEmail>
    <authorUrl>www.softverk.is</authorUrl>
    <version>1.6.0</version>
    <description>Webportal Search Module</description>
    <files>
        <filename module="mod_webportal_search">mod_webportal_search.php</filename>
        <folder>tmpl</folder>
        <filename>index.html</filename>
        <filename>mod_webportal_search.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.mod_webportal_search.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">


                <field name="template" default="front_page_search" type="list" label="Template"
                       description="Select template to show">
                    <option value="searchFiltersFrontpageModule.php">Front Page Search</option>
                    <option value="searchFiltersSidebarModule.php">Sidebar Search</option>
                </field>

            </fieldset>
            <fieldset name="advanced">
                <field
                        name="moduleclass_sfx"
                        type="text"
                        default=""
                        label="Module Class Suffix"
                        description="PARAMMODULECLASSSUFFIX"/>

            </fieldset>
        </fields>
    </config>
</extension>
